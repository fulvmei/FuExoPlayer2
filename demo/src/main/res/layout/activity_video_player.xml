<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MediaChooseActivity">

    <com.chengfu.android.fuplayer.demo.widget.DodoMoveView
        android:id="@+id/playerRoot"
        android:layout_width="match_parent"
        android:layout_height="202.5dp"
        app:layout_behavior="com.chengfu.android.fuplayer.demo.widget.DodoBelowBehavior1">

        <com.chengfu.android.fuplayer.video.FuPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            app:resize_mode="fit"
            app:shutter_background_color="#000000"
            app:surface_type="texture_view" />

        <com.chengfu.android.fuplayer.ext.ui.VideoControlView
            android:id="@+id/controlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.chengfu.android.fuplayer.ext.ui.VideoBufferingView
            android:id="@+id/bufferingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.chengfu.android.fuplayer.ext.ui.VideoPlayErrorView
            android:id="@+id/errorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <com.chengfu.android.fuplayer.ext.ui.VideoEndedView
            android:id="@+id/endedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <com.chengfu.android.fuplayer.ext.ui.VideoPlayWithoutWifiView
            android:id="@+id/noWifiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

    </com.chengfu.android.fuplayer.demo.widget.DodoMoveView>

    <FrameLayout
        app:layout_behavior="com.chengfu.android.fuplayer.demo.widget.DodoBelowBehavior"
        android:layout_marginTop="202.5dp"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>