<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MediaChooseActivity">

    <FrameLayout
        android:id="@+id/playerRoot"
        android:layout_width="match_parent"
        android:layout_height="202.5dp">

        <com.chengfu.android.fuplayer.FuPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            app:resize_mode="fit"
            app:shutter_background_color="#000000"
            app:surface_type="texture_view" />

        <com.chengfu.android.fuplayer.ext.ui.VideoControlView
            android:id="@+id/controlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.chengfu.android.fuplayer.SampleBufferingView
            android:id="@+id/bufferingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.chengfu.android.fuplayer.ext.ui.VideoPlayErrorView
            android:id="@+id/errorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <com.chengfu.android.fuplayer.SampleEndedView
            android:id="@+id/endedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

    </FrameLayout>

</RelativeLayout>