<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202.5dp">

        <com.chengfu.android.fuplayer.FuPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:surface_type="texture_view" />

        <com.chengfu.android.fuplayer.ext.ui.VideoControlView
            android:id="@+id/controlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.chengfu.android.fuplayer.ext.ui.VideoPlayWithoutWifiView
            android:id="@+id/noWifiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="视频标题" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#666666" />

</LinearLayout>