<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MediaChooseActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.chengfu.fuexoplayer2.widget.FuPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            app:resize_mode="fit"
            app:shutter_background_color="#333333"
            app:surface_type="surface_view" />


    </FrameLayout>

    <com.chengfu.fuexoplayer2.widget.DefaultControlView
        android:id="@+id/controlView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:show_in_buffering="true"
        app:show_in_ended="false" />

    <Button
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/controlView" />
</RelativeLayout>