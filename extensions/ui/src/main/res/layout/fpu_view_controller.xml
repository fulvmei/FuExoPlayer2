<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@id/controller_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A000000">

            <LinearLayout
                android:id="@+id/controller_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fpu_bg_video_controller_top"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/controller_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/fpu_selector_back_port" />

                <TextView
                    android:id="@+id/controller_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@id/controller_play_pause_switch"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_play_white_24dp" />

            <ImageButton
                android:id="@id/controller_volume_switch"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_volume_up_white_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fpu_bg_video_controller_bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@id/controller_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry"
                    tools:text="00:00" />

                <SeekBar
                    android:id="@id/controller_seek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="8dp"
                    android:progressDrawable="@drawable/fpu_bg_controller_progress"
                    android:thumb="@drawable/fpu_ic_controller_thumb" />

                <TextView
                    android:id="@id/controller_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/controller_screen_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="8dp"
                    android:src="@drawable/fpu_ic_full_screen" />
            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/controller_bottom_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:progressDrawable="@drawable/fpu_bg_controller_progress" />
    </RelativeLayout>
</merge>