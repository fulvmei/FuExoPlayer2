<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="enum" name="resize_mode">
        <enum name="fit" value="0"/>
        <enum name="fixed_width" value="1"/>
        <enum name="fixed_height" value="2"/>
        <enum name="fill" value="3"/>
        <enum name="zoom" value="4"/>
    </attr>
    <attr format="enum" name="surface_type">
        <enum name="none" value="0"/>
        <enum name="surface_view" value="1"/>
        <enum name="texture_view" value="2"/>
        <enum name="mono360_view" value="3"/>
    </attr>
    <color name="buttonBg">#CCCCCC</color>
    <color name="buttonTextColor">#000000</color>
    <color name="controller_bg_dark">#66000000</color>
    <color name="controller_bg_light">#00000000</color>
    <color name="default_controller_seekbar_bg">#666666</color>
    <color name="default_controller_seekbar_progress">#FF5722</color>
    <color name="default_controller_seekbar_progress2">#cccccc</color>
    <color name="edit_base_line_color">#77ffffff</color>
    <color name="player_view_edit_mode_bg">#FF7F7F7F</color>
    <color name="white">#FFFFFF</color>
    <item name="controller_container" type="id"/>
    <item name="controller_duration" type="id"/>
    <item name="controller_fast_forward" type="id"/>
    <item name="controller_play_pause_switch" type="id"/>
    <item name="controller_position" type="id"/>
    <item name="controller_repeat_switch" type="id"/>
    <item name="controller_rewind" type="id"/>
    <item name="controller_seek" type="id"/>
    <item name="controller_shuffle_switch" type="id"/>
    <item name="controller_volume_switch" type="id"/>
    <declare-styleable name="DefaultTimeBar">
        <attr format="dimension" name="bar_height"/>
        <attr format="dimension" name="touch_target_height"/>
        <attr format="dimension" name="ad_marker_width"/>
        <attr format="dimension" name="scrubber_enabled_size"/>
        <attr format="dimension" name="scrubber_disabled_size"/>
        <attr format="dimension" name="scrubber_dragged_size"/>
        <attr format="reference" name="scrubber_drawable"/>
        <attr format="color" name="played_color"/>
        <attr format="color" name="scrubber_color"/>
        <attr format="color" name="buffered_color"/>
        <attr format="color" name="unplayed_color"/>
        <attr format="color" name="ad_marker_color"/>
        <attr format="color" name="played_ad_marker_color"/>
    </declare-styleable>
    <declare-styleable name="FuPlayerView">
        <attr format="boolean" name="use_artwork"/>
        <attr format="reference" name="default_artwork"/>
        <attr format="boolean" name="use_controller"/>
        <attr format="boolean" name="hide_on_touch"/>
        <attr format="boolean" name="hide_during_ads"/>
        <attr format="boolean" name="auto_show"/>
        <!--<attr name="show_buffering" format="boolean" />-->
        <attr format="boolean" name="keep_content_on_player_reset"/>
        <attr name="resize_mode"/>
        <attr name="surface_type"/>
        <attr format="color" name="shutter_background_color"/>
        <attr name="player_layout_id"/>
        <attr name="show_timeout"/>
        <attr name="rewind_increment"/>
        <attr name="fastforward_increment"/>
        <attr name="show_shuffle_button"/>
        <attr name="controller_layout_id"/>
    </declare-styleable>
    <declare-styleable name="PlayerControlView">
        <attr format="reference" name="controller_layout_id"/>
        <attr format="integer" name="rewind_increment"/>
        <attr format="integer" name="fast_forward_increment"/>
        <attr format="integer" name="show_timeout"/>
        <attr format="integer" name="progress_update_interval"/>
        <attr format="integer" name="seek_number"/>
        <attr format="boolean" name="hide_in_buffering"/>
        <attr format="boolean" name="hide_in_ended"/>
        <attr format="boolean" name="hide_in_error"/>
        <attr format="boolean" name="hide_repeat_switch"/>
        <attr format="boolean" name="hide_volume_switch"/>
        <attr format="boolean" name="hide_shuffle_switch"/>

    </declare-styleable>
</resources>